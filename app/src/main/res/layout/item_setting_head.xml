<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_type"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/type_notify"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/txt_LK"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_LK"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/inLK"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/txt_email"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txt_type"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/InEmail"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/txt_SMS"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txt_LK"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_SMS"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="@string/InSMS"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txt_email"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>