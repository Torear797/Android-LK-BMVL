<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/divider</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="NewBtn" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">55dp</item>
        <item name="android:textColor">@color/colorLightGreen</item>
        <item name="iconTint">@color/colorLightGreen</item>
        <item name="strokeColor">@color/colorLightGreen</item>
        <item name="icon">@drawable/ic_add_black_24dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="MyHintText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="boxBackgroundColor">@color/field</item>
    </style>

    <!--Input field style-->
    <style name="MySpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:spinnerMode">dialog</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:popupElevation">3dp</item>
        <item name="android:topLeftRadius">5dp</item>
        <item name="android:topRightRadius">5dp</item>
    </style>

    <style name="ClearFocus">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar"> //SplashScreen
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>


</resources>
